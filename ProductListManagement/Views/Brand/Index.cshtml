@model List<Brand>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h1>Brand List</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        </div>
    </div>

    <hr />

    @if (Model != null && Model.Count > 0)
    {
        <table id="table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">Logo</th>
                    <th class="text-center">Company Name</th>
                    <th class="text-center">Founder</th>
                    <th class="text-center">CEO</th>
                    <th class="text-center">Established Year</th>
                    <th class="text-center">Industry</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img src="@Url.Content(item.BrandLogo)" width="25px" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Founder</td>
                        <td>@item.CEO</td>
                        <td>@item.EstablisedYear</td>
                        <td>@item.Industry</td>
                        <td class="d-flex align-items-center justify-content-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Brand" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>

                                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">No Records to Show</h2>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $('#table').DataTable();
    </script>
}
