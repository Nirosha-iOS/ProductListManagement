@model Brand

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-uppercase text-center"> Edit Brand</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" autocomplete="on" />
                    <span asp-validation-for="@Model.Name" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="EstablisedYear" class="form-label"></label>
                    <input asp-for="EstablisedYear" type="number" class="form-control" min="1900" max="@DateTime.Now.Year" step="1" placeholder="YYYY" />
                    <span asp-validation-for="@Model.EstablisedYear" class="text-danger"> </span>
                </div>

                <div class="mb-3">
                    <label asp-for="BrandLogo" class="form-label"></label>
                    <input type="file" asp-for="BrandLogo" class="form-control" autocomplete="off" />
                </div>
                <div class="mb-3">
                    <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-warning">Update</button>
                </div>
                
            </form>
        </div>
        <div class="col-md-4">
            @if(Model.BrandLogo != null)
            {
                <img src="@Url.Content(Model.BrandLogo)" width="100%" />
            }
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_validationScriptsPartial" />
}